<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_machine_tree" model="ir.ui.view">
            <field name="name">section.machine.tree</field>
            <field name="model">section.machine</field>
            <field name="arch" type="xml">
                <list string="Machines">
                    <field name="name"/>
                    <field name="section_id"/>
                    <field name="section_name"/>
                    <field name="section_location"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="view_machine_form" model="ir.ui.view">
            <field name="name">section.machine.form</field>
            <field name="model">section.machine</field>
            <field name="arch" type="xml">
                <form string="Machine">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="section_id" options="{'no_create': True}"/>
                            </group>
                            <group>
                                <field name="section_name" readonly="1"/>
                                <field name="section_location" readonly="1"/>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="created_at" readonly="1"/>
                                <field name="updated_at" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_machine_search" model="ir.ui.view">
            <field name="name">section.machine.search</field>
            <field name="model">section.machine</field>
            <field name="arch" type="xml">
                <search string="Machines">
                    <field name="name"/>
                    <field name="section_id"/>
                    <field name="section_name"/>
                    <field name="section_location"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_machine" model="ir.actions.act_window">
            <field name="name">Machines</field>
            <field name="res_model">section.machine</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first machine!
                </p>
            </field>
        </record>

        <menuitem id="menu_machines" 
                  name="Machines" 
                  parent="menu_sections"
                  action="action_machine" 
                  sequence="20"/>
    </data>
</odoo>

