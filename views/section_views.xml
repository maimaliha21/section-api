<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_section_tree" model="ir.ui.view">
            <field name="name">kiosk.section.tree</field>
            <field name="model">kiosk.section</field>
            <field name="arch" type="xml">
                <list string="Sections">
                    <field name="name"/>
                    <field name="section_id"/>
                    <field name="location"/>
                    <field name="machine_ids" widget="statinfo" string="Machines"/>
                    <field name="active" widget="boolean_toggle"/>
                </list>
            </field>
        </record>

        <record id="view_section_form" model="ir.ui.view">
            <field name="name">kiosk.section.form</field>
            <field name="model">kiosk.section</field>
            <field name="arch" type="xml">
                <form string="Section">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="section_id"/>
                                <field name="location"/>
                            </group>
                            <group>
                                <field name="active" widget="boolean_toggle"/>
                                <field name="created_at" readonly="1"/>
                                <field name="updated_at" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Machines">
                                <field name="machine_ids" nolabel="1">
                                    <tree string="Machines">
                                        <field name="name"/>
                                        <field name="created_at"/>
                                        <field name="active" widget="boolean_toggle"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_section_search" model="ir.ui.view">
            <field name="name">kiosk.section.search</field>
            <field name="model">kiosk.section</field>
            <field name="arch" type="xml">
                <search string="Sections">
                    <field name="name"/>
                    <field name="section_id"/>
                    <field name="location"/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactive" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="action_section" model="ir.actions.act_window">
            <field name="name">Sections</field>
            <field name="res_model">kiosk.section</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create your first section!
                </p>
            </field>
        </record>

        <menuitem id="menu_sections" 
                  name="Sections" 
                  parent="point_of_sale.menu_point_config_product"
                  action="action_section" 
                  sequence="30"/>
    </data>
</odoo>

